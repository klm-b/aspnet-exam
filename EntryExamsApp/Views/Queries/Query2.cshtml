@model IEnumerable<EntryExamsApp.Models.Examiner>

@{
    ViewBag.Title = "Запрос 2";
}

<main class="container-fluid py-3">

    <div class="row p-3">
        <div class="col-md-2">
            <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
                <a asp-action="Query1" class="nav-link">Запрос 1</a>
                <a asp-action="Query2" class="nav-link active">Запрос 2</a>
                <a asp-action="Query3" class="nav-link">Запрос 3</a>
                <a asp-action="Query4" class="nav-link">Запрос 4</a>
                <a asp-action="Query5" class="nav-link">Запрос 5</a>
                <a asp-action="Query6" class="nav-link">Запрос 6</a>
                <a asp-action="Query7" class="nav-link">Запрос 7</a>
                <a asp-action="Query8" class="nav-link">Запрос 8</a>
            </div>
        </div>

        <div class="col-md-8 offset-1 shadow">
            <h2 class="pt-2">Запрос 2</h2>
            <p>Выбирает из таблицы ЭКЗАМЕНАТОРЫ информацию об экзаменаторах, для которых установлен размер оплаты за прием одного экзамена в заданном интервале</p>

            <form class="form-inline pb-3" asp-action="Query2" method="get">
                <label for="priceMin">Минимум:</label>
                <input id="priceMin" name="priceMin" type="number" min="0" value="@ViewBag.MinPrice" class="ml-2 mr-3 form-control" />

                <label for="priceMax">Максимум:</label>
                <input id="priceMax" name="priceMax" type="number" min="0" value="@ViewBag.MaxPrice" class="ml-2 form-control" />

                <input type="submit" class="ml-3 btn btn-primary" value="Поиск">
            </form>

            @await Html.PartialAsync("_ExaminersTable", Model)
        </div>
    </div>
</main>