@using EntryExamsApp.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- header -->
    <header class="navbar navbar-expand-sm bg-primary navbar-dark">
        <!-- Иконка -->
        <a class="navbar-brand" href="#">
            <img src="~/img/kb_logo.svg" alt="KB logo" />
        </a>

        <!--Кнопка для разворачивания меню-->
        <button aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler"
                data-target="#navbarToggler" data-toggle="collapse" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Навигация -->
        <div class="collapse navbar-collapse" id="navbarToggler">
            <ul class="navbar-nav">
                @* https://stackoverflow.com/a/20411015/12637295 *@
                <li class="nav-item px-3 @Html.IsSelected(null, "Home")">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">
                        <i class="fas fa-home pr-1"></i>
                        <span>Главная страница</span>
                    </a>
                </li>
                <li class="nav-item px-3 @Html.IsSelected("Create,Delete,Details,Edit,Index", "Enrollees")">
                    <a asp-controller="Enrollees" asp-action="Index" class="nav-link">
                        <i class="fas fa-user-graduate pr-1"></i>
                        <span>Абитуриенты</span>
                    </a>
                </li>
                <li class="nav-item px-3 @Html.IsSelected("Create,Delete,Details,Edit,Index", "Examiners")">
                    <a asp-controller="Examiners" asp-action="Index" class="nav-link">
                        <i class="fas fa-chalkboard-teacher pr-1"></i>
                        <span>Экзаменаторы</span>
                    </a>
                </li>
                <li class="nav-item px-3 @Html.IsSelected("Create,Delete,Details,Edit,Index", "Exams")">
                    <a asp-controller="Exams" asp-action="Index" class="nav-link">
                        <i class="fas fa-icons pr-1"></i>
                        <span>Экзамены</span>
                    </a>
                </li>
                <li class="nav-item px-3 @Html.IsSelected(null, "Queries")">
                    <a asp-controller="Queries" asp-action="Query1" class="nav-link">
                        <i class="fas fa-pen-alt pr-1"></i>
                        <span>Запросы</span>
                    </a>
                </li>
            </ul>
        </div>
    </header>

    @RenderBody()


    <!-- footer -->
    <footer class="footer container-fluid bg-primary text-light">
        <span>Богдан, ПД811, Донецк, 2020</span>
        <a href="mailto:klm_b@outlook.com">
            <i class="fas fa-envelope pl-2 text-success"></i>
        </a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
