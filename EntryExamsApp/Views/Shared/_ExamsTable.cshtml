@model IEnumerable<EntryExamsApp.Models.Exam>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enrollee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Examiner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discipline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Enrollee.Surname)
                    @Html.DisplayFor(modelItem => item.Enrollee.Name)
                    @Html.DisplayFor(modelItem => item.Enrollee.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Examiner.Surname)
                    @Html.DisplayFor(modelItem => item.Examiner.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discipline.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td class="p-0 fit">
                    <a class="d-block text-center" asp-controller="Exams" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle m-1"></i></a>
                    <a class="d-block text-center" asp-controller="Exams" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit m-1"></i></a>
                    <a class="d-block text-center" asp-controller="Exams" asp-action="Delete" asp-route-id="@item.Id"><i class="fas text-danger m-1 fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
